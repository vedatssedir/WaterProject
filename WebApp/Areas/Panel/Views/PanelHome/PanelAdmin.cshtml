
@{
    ViewBag.Title = "PanelAdmin";
    Layout = "~/Areas/Panel/Views/Shared/_PanelLayout.cshtml";
}


<div class="page-content">
    <div class="row">
        <div class="col-md-4">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="media">

                        <div class="media-body">
                            <p class="text-muted font-weight-medium">Sipariş Sayısı</p>
                            <h4 class="mb-0" id="siparisdata"></h4>
                        </div>

                        <div class="mini-stat-icon avatar-sm rounded-circle bg-primary align-self-center">
                            <span class="avatar-title">
                                <i class="bx bx-copy-alt font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="media">
                        <div class="media-body">
                            <p class="text-muted font-weight-medium">Gelen Mail Sayısı</p>
                            <h4 class="mb-0">$35, 723</h4>
                        </div>

                        <div class="avatar-sm rounded-circle bg-primary align-self-center mini-stat-icon">
                            <span class="avatar-title rounded-circle bg-primary">
                                <i class="bx bx-archive-in font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="media">
                        <div class="media-body">
                            <p class="text-muted font-weight-medium">Yeni Gelen Sipariş Sayısı</p>
                            <h4 class="mb-0">$16.2</h4>
                        </div>

                        <div class="avatar-sm rounded-circle bg-primary align-self-center mini-stat-icon">
                            <span class="avatar-title rounded-circle bg-primary">
                                <i class="bx bx-purchase-tag-alt font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>+0
</div>


@section Scripts
{
    @*<script src="~/Areas/Panel/Scripts/admin.js"></script>*@
    @*<script src="~/lib/signalr/jquery.signalR.min.js"></script>
    <script src="/signalr/hubs"></script>*@  
    <script type="text/javascript">
        $(function () {
            debugger;
            var hubNotify = $.connection.siparishub;  
            $.connection.hub.start().done(function () {  
                getsiparisdegerchange();
            });  
  
            hubNotify.client.refreshData = function () {  
                getsiparisdegerchange();
            };  
        });
        function getsiparisdegerchange() {

            $.get('/Panel/PanelHome/SiparisSayisi',
                (data) => {
                    debugger;
                    var model = $("#siparisdata").empty();
                    model.text(data);
                });
        }

    </script>

}
