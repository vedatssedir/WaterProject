
@model IList<DataLayer.DataModels.Bayiler>
@{
    var index = 0;
}


@if (Model.Count > 0)
{

    <table class="table table-bordered table-sm">
        <thead class="thead-light">
            <tr>
                <th>Sıra</th>
                <th>Şirket Adı</th>
                <th>Telefon</th>
                <th>Adres</th>
                <th>Eposta</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                index++;
                <tr>
                    <td>@index</td>
                    <td>@item.SirketAdi</td>
                    <td>@item.Telefon</td>
                    <td>@item.Adresi</td>
                    <td>@item.Eposta</td>
                </tr>
            }
        </tbody>
    </table>



}
else
{
    <label style="font-weight:bold">İlçede bayi bulunmamaktadır.</label>
}