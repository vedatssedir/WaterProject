
@model IList<DataLayer.ViewModels.EmailListViewModel>
    
@{
    var index = 0;
}


@if (Model.Count > 0)
{
    <table class="table table-bordered table-sm">
        <thead class="thead-dark">
        <tr>
            <th>Sıra</th>
            <th>Ad Soyad</th>
            <th>Eposta</th>
            <th>Konu</th>
            <th>Telefon No:</th>
            <th>Mesaj</th>
            <th>Email Tarihi</th>
            <th>
                İşlemler
               
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            index++;
            <tr>
                <td>@index</td>
                <td>@item.AdSoyad</td>
                <td>@item.Eposta</td>
                <td>@item.Konu</td>
                <td>@item.Telefon</td>
                <td>@item.Mesaj</td>
                <td>@item.EmailTarihi</td>
                <td>
                    <button class="btn btn-outline-info btn-sm" onclick="MailEkran('@item.Id')"><i class="mdi mdi-message-alert"></i></button>
                    <button class="btn btn-outline-info btn-sm" onclick="MailSil('@item.Id')"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <p>Sistem de mail bulunmamaktadır.</p>
    </div>
}